	function load_record(){
		parent::load_record();
		$os = base::get_tipo_dispositivo();
			if($os == 'IPAD' ){
	            $this->dws['dw_cotizacion']->set_item(0,'TIPO_DISPOSITIVO', 'IPAD');
			}
			
	}
